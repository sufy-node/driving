<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
        <div>
            <h1 style="font-size: 2rem; letter-spacing: -1px;">Instructor Portal</h1>
            <p style="color: #666;">Welcome back, <strong><%= user.name %></strong></p>
        </div>
        <div style="display: flex; gap: 15px;">
            <div class="card" style="padding: 10px 25px; margin-bottom: 0; background: var(--primary-color); color: white; text-align: center; border: none;">
                <small style="opacity: 0.8; text-transform: uppercase; font-size: 0.7rem; font-weight: bold; display: block;">Lessons This Month</small>
                <span style="font-size: 1.8rem; font-weight: 800;"><%= completedThisMonth %></span>
            </div>
            <a href="<%= tenantUrl('/attendance') %>" class="btn" style="background: var(--secondary-color); display: flex; align-items: center; gap: 8px;">
                ðŸ“… View Full Schedule
            </a>
        </div>
    </header>

    <section>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h2 style="font-size: 1.3rem; color: var(--text-dark);">Your Lessons Today</h2>
            <span style="font-size: 0.9rem; color: #94a3b8; font-weight: 600;"><%= new Date().toLocaleDateString('en-GB', { day: '2-digit', month: 'long' }) %></span>
        </div>
        
        <% if (sessions.length === 0) { %>
            <div class="card" style="text-align: center; padding: 80px 20px; border: 2px dashed #e2e8f0; background: transparent;">
                <p style="color: #94a3b8; font-size: 1.1rem;">You have no lessons assigned for today.</p>
                <a href="<%= tenantUrl('/attendance') %>" style="color: var(--accent-color); font-weight: bold; text-decoration: underline; margin-top: 10px; display: inline-block;">Check other dates</a>
            </div>
        <% } %>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 20px;">
            <% sessions.forEach(s => { %>
                <div class="card" style="border-left: 6px solid <%= s.status === 'PRESENT' ? 'var(--success-color)' : (s.status === 'ABSENT' ? 'var(--danger-color)' : '#cbd5e1') %>; padding: 20px; transition: transform 0.2s;">
                    <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                        <div>
                            <div style="color: var(--primary-color); font-weight: 800; font-size: 1.2rem; margin-bottom: 5px;"><%= s.startTime %> - <%= s.endTime %></div>
                            <h3 style="margin: 0; font-size: 1.4rem;"><%= s.studentId?.name %></h3>
                            <p style="font-size: 0.9rem; color: #64748b; margin-top: 5px;">
                                ðŸš— <strong><%= s.vehicleId?.name %></strong> <code style="background: #f1f5f9; padding: 2px 5px; border-radius: 4px;"><%= s.vehicleId?.plateNumber %></code>
                            </p>
                        </div>
                        <% if (s.studentId?.phone) { %>
                            <a href="tel:<%= s.studentId.phone %>" class="btn" style="background: #f1f5f9; color: var(--primary-color); padding: 10px; border-radius: 50%; width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; border: 1px solid #e2e8f0;" title="Call Student">
                                ðŸ“ž
                            </a>
                        <% } %>
                    </div>

                    <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #f1f5f9; display: flex; justify-content: space-between; align-items: center;">
                        <span class="badge" style="background: <%= s.status === 'PRESENT' ? 'var(--success-color)' : (s.status === 'ABSENT' ? 'var(--danger-color)' : '#f1f5f9') %>; color: <%= s.status === 'PENDING' ? '#64748b' : '#fff' %>; padding: 6px 12px;">
                            <%= s.status %>
                        </span>
                        
                        <div style="display: flex; gap: 10px;">
                            <% if (s.status === 'PENDING') { %>
                                <button onclick="markAttendance('<%= s._id %>', 'PRESENT')" class="btn-success" style="padding: 8px 20px; font-weight: bold;">Present</button>
                                <button onclick="markAttendance('<%= s._id %>', 'ABSENT')" class="btn-danger" style="padding: 8px 20px; font-weight: bold;">Absent</button>
                            <% } else { %>
                                <button onclick="resetAttendance('<%= s._id %>')" class="btn" style="background: #94a3b8; padding: 8px 15px; font-size: 0.8rem;">Reset</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</div>

<script>
async function markAttendance(sessionId, status) {
    const { value: notes } = await Swal.fire({
        title: 'Lesson Feedback',
        input: 'textarea',
        inputLabel: 'What did the student learn today?',
        inputPlaceholder: 'e.g. Mastered the clutch, practiced reverse parking...',
        showCancelButton: true,
        confirmButtonText: 'Save & Mark ' + status,
        confirmButtonColor: status === 'PRESENT' ? 'var(--success-color)' : 'var(--danger-color)'
    });

    if (notes !== undefined) {
        const res = await fetch('<%= tenantUrl("/attendance/mark") %>', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sessionId, status, notes })
        });
        if ((await res.json()).success) {
            Toast.fire({ icon: 'success', title: 'Attendance Recorded' });
            setTimeout(() => location.reload(), 1000);
        }
    }
}

async function resetAttendance(sessionId) {
    const { isConfirmed } = await Swal.fire({
        title: 'Reset Session?',
        text: "This will revert progress and remove any plan extensions.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, reset it'
    });
    if (isConfirmed) {
        const res = await fetch('<%= tenantUrl("/attendance/reset") %>', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sessionId })
        });
        if ((await res.json()).success) location.reload();
    }
}
</script>