<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
        <div>
            <h1>User Management</h1>
            <p>Manage staff, trainers, and students for <strong><%= tenant.name %></strong></p>
        </div>
        <a href="<%= tenantUrl('/dashboard') %>" class="btn">Back to Dashboard</a>
    </header>

    <section class="card mb-20">
        <h2>Add New User</h2>
        <form action="<%= tenantUrl('/users/add') %>" method="POST">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                <div>
                    <label>Full Name</label>
                    <input type="text" name="name" placeholder="e.g. John Doe" required style="width: 100%;">
                </div>
                <div>
                    <label>Email Address</label>
                    <input type="email" name="email" placeholder="e.g. john@example.com" required style="width: 100%;">
                </div>
                <div>
                    <label>Temporary Password</label>
                    <input type="password" name="password" placeholder="Min 6 characters" required style="width: 100%;">
                </div>
                <div>
                    <label>Assign Role</label>
                    <select name="role" required style="width: 100%;">
                        <option value="TRAINER">Trainer (Instructor)</option>
                        <option value="CUSTOMER">Student (Customer)</option>
                        <option value="STAFF">Office Staff</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn-success mt-20">Create User Account</button>
        </form>
    </section>

    <section class="card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
            <h2>Active Users</h2>
            <div class="filters">
                <a href="<%= tenantUrl('/users') %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: <%= !req.query.role ? 'var(--primary-color)' : '#999' %>">All</a>
                <a href="<%= tenantUrl('/users?role=TRAINER') %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: <%= req.query.role === 'TRAINER' ? 'var(--primary-color)' : '#999' %>">Trainers</a>
                <a href="<%= tenantUrl('/users?role=CUSTOMER') %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: <%= req.query.role === 'CUSTOMER' ? 'var(--primary-color)' : '#999' %>">Students</a>
                <a href="<%= tenantUrl('/users?role=STAFF') %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: <%= req.query.role === 'STAFF' ? 'var(--primary-color)' : '#999' %>">Staff</a>
                <a href="<%= tenantUrl('/users?role=COMPANY_ADMIN') %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: <%= req.query.role === 'COMPANY_ADMIN' ? 'var(--primary-color)' : '#999' %>">Admin</a>
                
            </div>
        </div>
        
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr><td colspan="5" class="text-center">No users found matching your criteria.</td></tr>
                    <% } %>
                    <% users.forEach(u => { %>
                        <tr>
                            <td><strong><%= u.name %></strong></td>
                            <td><%= u.email %></td>
                            <td>
                                <span class="badge badge-<%= u.role.toLowerCase() %>">
                                    <%= u.role %>
                                </span>
                            </td>
                            <td>
                                <span style="color: <%= u.isActive ? 'var(--success-color)' : 'var(--danger-color)' %>">
                                    ‚óè <%= u.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td>
                                <a href="<%= tenantUrl('/users/edit/' + u._id) %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: var(--accent-color);">Edit Profile</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Modern Pagination Partial -->
        <%- include('../partials/pagination') %>
    </section>
</div>