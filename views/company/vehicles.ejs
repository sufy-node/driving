<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
        <div>
            <h1>Vehicle Fleet Management</h1>
            <p>Manage cars available for training at <strong><%= tenant.name %></strong></p>
        </div>
        <a href="<%= tenantUrl('/dashboard') %>" class="btn">Back to Dashboard</a>
    </header>

    <div class="grid">
        <!-- Add Vehicle Form -->
        <section class="card">
            <h2>Register New Vehicle</h2>
            <form action="<%= tenantUrl('/vehicles/add') %>" method="POST">
                <div style="margin-bottom: 15px;">
                    <label>Vehicle Name / Model</label>
                    <input type="text" name="name" placeholder="e.g. Toyota Swift (Red)" required style="width: 100%;">
                </div>
                
                <div style="margin-bottom: 15px;">
                    <label>Plate Number</label>
                    <input type="text" name="plateNumber" placeholder="e.g. ABC-1234" required style="width: 100%;">
                </div>

                <button type="submit" class="btn-success" style="width: 100%;">Add to Fleet</button>
            </form>
        </section>

        <!-- Fleet Summary -->
        <section class="card">
            <h3>Fleet Status</h3>
            <div style="display: flex; justify-content: space-around; margin-top: 20px; text-align: center;">
                <div>
                    <small>Total</small>
                    <p style="font-size: 1.5rem; font-weight: bold;"><%= pagination.total %></p>
                </div>
                <div>
                    <small>Active</small>
                    <p style="font-size: 1.5rem; font-weight: bold; color: var(--success-color);">
                        <%= vehicles.filter(v => v.isActive).length %>
                    </p>
                </div>
                <div>
                    <small>Inactive</small>
                    <p style="font-size: 1.5rem; font-weight: bold; color: var(--danger-color);">
                        <%= vehicles.filter(v => !v.isActive).length %>
                    </p>
                </div>
            </div>
            <hr style="margin: 20px 0;">
            <p style="font-size: 0.85rem; color: #666;">Note: Only active vehicles can be assigned to new student enrollments.</p>
        </section>
    </div>

    <section class="card">
        <h2>Registered Vehicles</h2>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Vehicle Name</th>
                        <th>Plate Number</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (vehicles.length === 0) { %>
                        <tr><td colspan="5" class="text-center">No vehicles registered yet.</td></tr>
                    <% } %>
                    <% vehicles.forEach(v => { %>
                        <tr>
                            <td><code>#<%= v._id %></code></td>
                            <td><strong><%= v.name %></strong></td>
                            <td><code><%= v.plateNumber %></code></td>
                            <td>
                                <span class="badge" style="background: <%= v.isActive ? 'var(--success-color)' : 'var(--danger-color)' %>; color: white;">
                                    <%= v.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td>
                                <div style="display: flex; gap: 5px;">
                                    <a href="<%= tenantUrl('/vehicles/edit/' + v._id) %>" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: var(--accent-color);">Edit</a>
                                    <form action="<%= tenantUrl('/vehicles/toggle/' + v._id) %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background: #666;">
                                            Toggle
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Modern Pagination Partial -->
        <%- include('../partials/pagination') %>
    </section>
</div>