<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
        <div>
            <h1 style="font-size: 2rem; letter-spacing: -1px;">Welcome, <%= user.name %></h1>
            <p style="color: var(--secondary-color);">School: <strong><%= tenant.name %></strong></p>
        </div>
        <a href="<%= tenantUrl('/attendance') %>" class="btn btn-primary">Today's Schedule</a>
    </header>

    <!-- KPI Stats Grid -->
    <section class="grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
        <div class="card" style="border-bottom: 4px solid var(--primary-color);">
            <small style="text-transform: uppercase; font-weight: bold; color: var(--secondary-color); font-size: 0.7rem;">Active Plans</small>
            <h2 style="font-size: 2rem; margin-top: 5px;"><%= stats.activeEnrollments %></h2>
        </div>
        <div class="card" style="border-bottom: 4px solid var(--success-color);">
            <small style="text-transform: uppercase; font-weight: bold; color: var(--secondary-color); font-size: 0.7rem;">Today's Lessons</small>
            <h2 style="font-size: 2rem; margin-top: 5px;"><%= stats.todaysSessions %></h2>
        </div>
        <div class="card" style="border-bottom: 4px solid var(--warning-color);">
            <small style="text-transform: uppercase; font-weight: bold; color: var(--secondary-color); font-size: 0.7rem;">Active Vehicles</small>
            <h2 style="font-size: 2rem; margin-top: 5px;"><%= stats.activeVehicles %></h2>
        </div>
        <div class="card" style="border-bottom: 4px solid var(--accent-color);">
            <small style="text-transform: uppercase; font-weight: bold; color: var(--secondary-color); font-size: 0.7rem;">Total Students</small>
            <h2 style="font-size: 2rem; margin-top: 5px;"><%= stats.totalStudents %></h2>
        </div>
    </section>

    <div class="grid" style="grid-template-columns: 2fr 1fr;">
        
        <!-- Upcoming Schedule -->
        <section class="card">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h2 style="font-size: 1.2rem;">Upcoming Schedule</h2>
                <a href="<%= tenantUrl('/attendance') %>" style="font-size: 0.8rem; color: var(--primary-color); font-weight: 600;">View All</a>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Student</th>
                            <th>Trainer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (upcomingSessions.length === 0) { %>
                            <tr><td colspan="4" class="text-center" style="padding: 30px; color: var(--secondary-color);">No upcoming lessons.</td></tr>
                        <% } %>
                        <% upcomingSessions.forEach(session => { %>
                            <tr>
                                <td><small><%= new Date(session.date).toLocaleDateString('en-GB', { day: '2-digit', month: 'short' }) %></small></td>
                                <td><strong><%= session.startTime %></strong></td>
                                <td><%= session.studentId?.name %></td>
                                <td><small><%= session.trainerId?.name %></small></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Alerts & Actions -->
        <section style="display: flex; flex-direction: column; gap: 20px;">
            <% if (stats.pendingAttendanceCount > 0) { %>
                <div class="card" style="background: #fff1f2; border: 1px solid #fecdd3;">
                    <h3 style="color: var(--danger-color); font-size: 1rem;">‚ö†Ô∏è Action Required</h3>
                    <p style="font-size: 0.85rem; margin: 10px 0;"><strong><%= stats.pendingAttendanceCount %></strong> sessions are unmarked.</p>
                    <a href="<%= tenantUrl('/attendance') %>" class="btn btn-danger" style="width: 100%; font-size: 0.8rem;">Fix Now</a>
                </div>
            <% } %>

            <div class="card">
                <h3 style="font-size: 1rem; margin-bottom: 15px;">Quick Actions</h3>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <a href="<%= tenantUrl('/enrollments') %>" class="btn btn-outline" style="justify-content: flex-start;">‚ûï New Enrollment</a>
                    <a href="<%= tenantUrl('/vehicles') %>" class="btn btn-outline" style="justify-content: flex-start;">üöó Add Vehicle</a>
                    <a href="<%= tenantUrl('/users') %>" class="btn btn-outline" style="justify-content: flex-start;">üë§ Manage Staff</a>
                </div>
            </div>
        </section>
    </div>
</div>