<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px;">
        <div>
            <h1 style="font-size: 2rem; letter-spacing: -1px;">School Configuration</h1>
            <p style="color: var(--secondary-color);">Manage branding and contact information</p>
        </div>
        <a href="<%= tenantUrl('/dashboard') %>" class="btn btn-outline">Back</a>
    </header>

    <div class="grid" style="grid-template-columns: 1.6fr 1fr;">
        
        <section class="card">
            <form action="<%= tenantUrl('/settings/update') %>" method="POST">
                <h3 style="margin-bottom: 25px; border-bottom: 1px solid var(--gray-100); padding-bottom: 10px;">Visual Branding</h3>
                
                <div class="grid" style="grid-template-columns: 1fr 1fr 1fr; margin-bottom: 25px;">
                    <div class="form-group">
                        <label>Primary Color</label>
                        <input type="color" name="primaryColor" value="<%= tenant.primaryColor %>" style="height: 50px; padding: 4px;">
                    </div>
                    <div class="form-group">
                        <label>Secondary Color</label>
                        <input type="color" name="secondaryColor" value="<%= tenant.secondaryColor || '#64748b' %>" style="height: 50px; padding: 4px;">
                    </div>
                    <div class="form-group">
                        <label>Accent Color</label>
                        <input type="color" name="accentColor" value="<%= tenant.accentColor || '#6366f1' %>" style="height: 50px; padding: 4px;">
                    </div>
                </div>

                <div class="form-group">
                    <label>Driving School Name</label>
                    <input type="text" name="name" value="<%= tenant.name %>" required>
                </div>

                <h3 style="margin-top: 40px; margin-bottom: 25px; border-bottom: 1px solid var(--gray-100); padding-bottom: 10px;">Contact Details</h3>

                <div class="grid" style="grid-template-columns: 1fr 1fr;">
                    <div class="form-group">
                        <label>Official Email</label>
                        <input type="email" name="email" value="<%= tenant.settings?.email || '' %>" placeholder="contact@school.com">
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="text" name="phone" value="<%= tenant.settings?.phone || '' %>" placeholder="+1 234 567 890">
                    </div>
                </div>

                <div class="form-group">
                    <label>Physical Address</label>
                    <textarea name="address" rows="3" placeholder="123 Driving Lane, City, Country"><%= tenant.settings?.address || '' %></textarea>
                </div>

                <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid var(--gray-100);">
                    <button type="submit" class="btn btn-primary" style="padding: 14px 40px;">Save All Changes</button>
                </div>
            </form>
        </section>

        <section style="display: flex; flex-direction: column; gap: 24px;">
            <div class="card" style="background: var(--gray-100); border: 2px dashed var(--gray-300);">
                <h3 style="margin-bottom: 15px;">Theme Preview</h3>
                <p style="font-size: 0.85rem; color: var(--secondary-color); margin-bottom: 20px;">This is how your selected colors will appear to users.</p>
                
                <div style="background: var(--primary-color); color: white; padding: 15px; border-radius: 8px; text-align: center; margin-bottom: 15px; font-weight: bold;">
                    Primary Element (Navbar/Buttons)
                </div>
                <div style="background: var(--secondary-color); color: white; padding: 15px; border-radius: 8px; text-align: center; margin-bottom: 15px; font-weight: bold;">
                    Secondary Element (Headers)
                </div>
                <p style="color: var(--accent-color); font-weight: 800; text-align: center; font-size: 1.1rem;">Accent Link Style</p>
            </div>
        </section>
    </div>
</div>