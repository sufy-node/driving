<div class="container">
    <header class="mb-20" style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1>School Configuration</h1>
            <p>Manage branding and contact information for <strong><%= tenant.name %></strong></p>
        </div>
        <a href="<%= tenantUrl('/dashboard') %>" class="btn">Back to Dashboard</a>
    </header>

    <div class="grid" style="grid-template-columns: 1.5fr 1fr; gap: 30px;">
        
        <section class="card">
            <form action="<%= tenantUrl('/settings/update') %>" method="POST">
                <h3 style="margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 10px;">Visual Branding</h3>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; margin-bottom: 20px;">
                    <div>
                        <label>Primary Color</label>
                        <input type="color" name="primaryColor" value="<%= tenant.primaryColor %>" style="height: 50px; cursor: pointer;">
                        <small style="color: #666;">Navbars & Main Buttons</small>
                    </div>
                    <div>
                        <label>Secondary Color</label>
                        <input type="color" name="secondaryColor" value="<%= tenant.secondaryColor || '#64748b' %>" style="height: 50px; cursor: pointer;">
                        <small style="color: #666;">Sidebars & Text</small>
                    </div>
                    <div>
                        <label>Accent Color</label>
                        <input type="color" name="accentColor" value="<%= tenant.accentColor || '#6366f1' %>" style="height: 50px; cursor: pointer;">
                        <small style="color: #666;">Links & Highlights</small>
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label>Driving School Name</label>
                    <input type="text" name="name" value="<%= tenant.name %>" required style="width: 100%;">
                </div>

                <h3 style="margin-top: 40px; margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 10px;">Contact Details</h3>

                <div style="margin-bottom: 20px;">
                    <label>Official Email</label>
                    <input type="email" name="email" value="<%= tenant.settings?.email || '' %>" style="width: 100%;">
                </div>

                <div style="margin-bottom: 20px;">
                    <label>Phone Number</label>
                    <input type="text" name="phone" value="<%= tenant.settings?.phone || '' %>" style="width: 100%;">
                </div>

                <div style="margin-bottom: 20px;">
                    <label>Physical Address</label>
                    <textarea name="address" rows="3" style="width: 100%;"><%= tenant.settings?.address || '' %></textarea>
                </div>

                <button type="submit" class="btn-success" style="padding: 12px 30px; margin-top: 20px;">Save All Changes</button>
            </form>
        </section>

        <section style="display: flex; flex-direction: column; gap: 20px;">
            <div class="card" style="background: #f8fafc; border: 1px dashed #cbd5e1;">
                <h3>Theme Preview</h3>
                <div style="margin-top: 20px;">
                    <div style="background: var(--primary-color); color: white; padding: 10px; border-radius: 6px; text-align: center; margin-bottom: 10px;">
                        Primary Element
                    </div>
                    <div style="background: var(--secondary-color); color: white; padding: 10px; border-radius: 6px; text-align: center; margin-bottom: 10px;">
                        Secondary Element
                    </div>
                    <p style="color: var(--accent-color); font-weight: bold; text-align: center;">Accent Link Style</p>
                </div>
            </div>
        </section>
    </div>
</div>