<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Driving SaaS Pro</title>
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Modern UI Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            /* Dynamic Primary Color from Database or Default Blue */
            --primary-color: <%= (locals.tenant && tenant.primaryColor) ? tenant.primaryColor : '#2563eb' %>;
            --sidebar-width: 250px;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --accent-color: #6366f1;
        }
    </style>
</head>
<body>
    <nav>
        <div class="container">
            <div class="nav-brand">
                <a href="/">DRIVE<strong>SAAS</strong> <span style="font-size: 0.7rem; background: rgba(255,255,255,0.2); padding: 2px 6px; border-radius: 4px; margin-left: 5px;">PRO</span></a>
            </div>
            <div class="nav-links">
                <% if (locals.user) { %>
                    
                    <!-- 1. SUPER ADMIN GLOBAL ACCESS -->
                    <% if (user.role === 'SUPER_ADMIN') { %>
                        <a href="/superadmin/dashboard" style="color: #f1c40f; font-weight: bold;">â˜… Global Panel</a>
                    <% } %>

                    <!-- 2. COMPANY CONTEXTUAL NAVIGATION -->
                    <% if (locals.tenant && typeof tenantUrl !== 'undefined') { %>
                        <a href="<%= tenantUrl('/dashboard') %>">Dashboard</a>
                        <a href="<%= tenantUrl('/attendance') %>">Attendance</a>
                        
                        <!-- Admin & Super Admin Only Company Links -->
                        <% if (user.role === 'COMPANY_ADMIN' || user.role === 'SUPER_ADMIN') { %>
                            <a href="<%= tenantUrl('/enrollments') %>">Enrollments</a>
                            <a href="<%= tenantUrl('/vehicles') %>">Vehicles</a>
                            <a href="<%= tenantUrl('/users') %>">Users</a>
                            
                            <!-- Dynamic Module: Reporting -->
                            <% if (tenant.enabledModules && tenant.enabledModules.reporting) { %>
                                <a href="<%= tenantUrl('/reports') %>">Reports</a>
                            <% } %>
                            
                            <!-- School Configuration -->
                            <a href="<%= tenantUrl('/settings') %>">Settings</a>
                        <% } %>
                    <% } %>

                    <!-- 3. AUTHENTICATION ACTIONS -->
                    <a href="/auth/logout" class="btn-danger" style="padding: 5px 15px; border-radius: 20px; margin-left: 10px; font-weight: 600;">Logout</a>
                <% } else { %>
                    <a href="/auth/login" class="btn" style="background: rgba(255,255,255,0.2);">Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <main>
        <!-- Main Content Injection -->
        <%- body %>
    </main>

    <footer style="text-align: center; padding: 40px 0; color: #888; font-size: 0.8rem; border-top: 1px solid #eee; margin-top: 50px;">
        <div class="container">
            <p>&copy; 2025 Driving School Management SaaS. All Rights Reserved.</p>
            <p style="margin-top: 5px; opacity: 0.6;">Production Environment v1.0.4 | Secure Multi-Tenant Architecture</p>
        </div>
    </footer>

    <!-- Global Notification & Toast System -->
    <script>
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 4000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        // Capture Success/Error from Server-side Locals or Query Params
        const successMsg = "<%= success %>";
        const errorMsg = "<%= error %>";

        if (successMsg && successMsg !== 'null' && successMsg !== 'undefined') {
            Toast.fire({ icon: 'success', title: successMsg });
        }

        if (errorMsg && errorMsg !== 'null' && errorMsg !== 'undefined') {
            Toast.fire({ icon: 'error', title: errorMsg });
        }

        // Clean URL to prevent Toast re-triggering on refresh
        if (window.history.replaceState) {
            const url = new URL(window.location);
            url.searchParams.delete('success');
            url.searchParams.delete('error');
            window.history.replaceState({}, document.title, url);
        }
    </script>
</body>
</html>